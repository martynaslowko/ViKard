<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"

    tools:context=".ui.card.AddCardActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="372dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="89dp"
        android:autoSizeTextType="uniform"
        android:text="@string/add"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="335dp"
        android:layout_height="64dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:autoSizeTextType="uniform"
        android:text="@string/qr"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/scannedContent"
        android:layout_width="140dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="494dp"
        android:layout_marginEnd="157dp"
        android:text="code reader"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/initiateScan"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="161dp"
        android:background="@drawable/ic_baseline_qr" />

    <Button
        android:id="@+id/addCardToDB"
        android:layout_width="296dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/null"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="70dp"
        android:clickable="false"
        android:focusable="false"
        android:text="Add" />

    <EditText
        android:id="@+id/expiryDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="125dp"
        android:ems="10"
        android:inputType="date" />

    <Spinner
        android:id="@+id/shopListSpinner"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:layout_below="@+id/initiateScan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="124dp"
        android:spinnerMode="dropdown" />

</RelativeLayout>