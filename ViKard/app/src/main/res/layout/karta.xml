<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/card"><![CDATA[



    />





    ]]>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="match_parent"
        android:layout_marginStart="100dp"
        android:translationX="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/shopName"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_below="@id/barcode"
        android:layout_marginStart="49dp"
        android:gravity="center"
        android:rotation="90"
        android:text="Sklep"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardExpires"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="180dp"
        android:gravity="center"
        android:rotation="90"
        android:text="2021-02-20"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barcode_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:rotation="90"
        android:text="123456789101123"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:translationX="-15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="538dp"
        android:layout_height="match_parent"
        android:ellipsize="none"
        android:fontFamily="@font/barcode"
        android:gravity="center"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:rotation="90"
        android:rotationX="0"
        android:rotationY="0"
        android:singleLine="true"
        android:text="123456789101123"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="80sp"
        android:translationX="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barcode2"
        android:layout_width="538dp"
        android:layout_height="match_parent"
        android:ellipsize="none"
        android:fontFamily="@font/barcode"
        android:gravity="center"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:rotation="90"
        android:rotationX="0"
        android:rotationY="0"
        android:singleLine="true"
        android:text="123456789101123"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="80sp"
        android:translationX="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>