<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/card">

    <TextView
        android:id="@+id/shopName"
        android:layout_width="549dp"
        android:layout_height="106dp"
        android:layout_below="@id/barcode"
        android:gravity="center"
        android:text="Sklep"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="856dp"
        android:layout_height="122dp"
        android:translationX="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/cardExpires"
        android:layout_width="202dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="2021-02-20"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/barcode_text"
        android:layout_width="264dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="123456789101123"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:translationX="-15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/cardExpires"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcode"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/barcode"
        android:layout_width="685dp"
        android:layout_height="78dp"
        android:layout_marginTop="44dp"
        android:ellipsize="none"
        android:fontFamily="@font/barcode"
        android:gravity="center"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:rotationX="0"
        android:rotationY="0"
        android:scaleY="1.75"
        android:singleLine="true"
        android:text="123456789101123"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="80sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/linkbutton"
        android:layout_width="355dp"
        android:layout_height="156dp"
        android:background="@drawable/linkbutton"
        android:text="@string/przejd_do_sklepu"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopName" />

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/linkbutton"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linkbutton"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.687"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>